{
  "name": "yarn-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "yarn --cwd apps/backend start",
    "build": "yarn --cwd apps/frontend build",
    "next": "yarn --cwd apps/nextapp dev",
    "dev": "npm-run-all --parallel start next"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}